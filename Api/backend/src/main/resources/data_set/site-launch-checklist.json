      "topic": "Checklist",
      "items": [
        {
          "topic": "General",
          "items": [
            {
              "title": " Strict usage of domain with or without www"
            },
            {
              "title": " Correct language set in HTML tag"
            },
            {
              "title": " Charset is set"
            },
            {
              "title": " HTML is valid"
            },
            {
              "title": " 404-page is available"
            }
          ]
        },
        {
          "topic": "SEO",
          "items": [
            {
              "title": " Pages can be indexed"
            },
            {
              "title": " Pages have unique page titles (fewer than 70 characters, includes keywords)."
            },
            {
              "title": " Pages have unique meta descriptions (fewer than 156 characters, includes keywords)."
            },
            {
              "title": " Pages have keywords (fewer than 10, all words appear in page copy)."
            },
            {
              "title": " Images use the alt-attribute"
            },
            {
              "title": " Links use a title-attribute"
            },
            {
              "title": " A dynamic XML sitemap has been created."
            },
            {
              "title": " The XML sitemap has been submitted to search engines."
            },
            {
              "title": " H1s used for page titles and only one H1 per page"
            },
            {
              "title": " HTTPS is used on all pages"
            }
          ]
        },
        {
          "topic": "Google Analytics",
          "items": [
            {
              "title": " Create <a href=\"http://www.google.com/analytics/\">Google Analytics</a> account"
            },
            {
              "title": " Hook up the GA Tracking Code (typically in our <code>analytics_lib.js</code> file)"
            },
            {
              "title": " Set up relevant Goals and Funnels"
            },
            {
              "title": " Set up <a href=\"https://www.google.com/webmasters/tools/home?hl=en\">Google Webmaster Tools</a>"
            },
            {
              "title": " Verify site in Webmaster Tools with DNS TXT record"
            },
            {
              "title": " Link Webmaster Tools to Google Analytics"
            }
          ]
        },
        {
